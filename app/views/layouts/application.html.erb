
<!DOCTYPE html>
<html>
<head>
  <title>Portf</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid"> 
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <!-- Brand and toggle get grouped for better mobile display -->           
        <div class="navbar-logo pull-left">
          <%= image_tag 'laid-cat.png', :class => 'img-responsive'%>
          <a class="navbar-brand" href="#"> W e b - D e v e l o p m e n t </a> 
       </div>
      <div class="collapse navbar-collapse" id="navbar-collapse">   
        <ul class="nav navbar-nav navbar-right">
          <%= link_to 'About', '#', :class => 'btn btn-warning btn-lg' %>
          <%= link_to 'Work', '#', :class => 'btn btn-warning btn-lg' %>
          <%= link_to 'Drop a line', '#', :class => 'btn btn-warning btn-lg' %>
        </ul>    
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>

<%= yield %>
<!--footer starts here -->
<div class="clr"></div>


<footer>
  <div class="container narrow row-fluid">
    <%= image_tag 'laid-cat.png', :class => 'img-responsive pull-left'%>
    <div class="col-xs-12 col-sm-3">
      <%= link_to 'About', '#', :class => 'btn btn-warning btn-sm pull-left' %>
      <%= link_to 'Drop a line', '#', :class => 'btn btn-warning btn-sm pull-left' %>
    </div>  
    <div class="col-xs-12 col-sm-3">
      <br />
      <%= link_to '#' do %>
        <%= image_tag 'github.png', :class => 'social-button' %>
      <% end %>
      <%= image_tag 'gmail.png', :class => 'social-button' %>  
    </div> 
  </div>  
</footer>  


</body>
</html>
